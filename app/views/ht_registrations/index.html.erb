<h1>Registrations</h1>

<%= link_to 'New Registration', new_ht_registration_path, class: 'btn btn-primary' %>

<br />
<br />

<div id="maincontent" class="row">
  <h2 class="pull-left">Current Registrations</h2>
</div>

<table class="table table-striped" data-toggle="table">
  <tr>
    <th>Name</th>
    <th>Institution</th>
    <th>Ticket</th>
    <th>Contact Info</th>
    <th>Auth Rep</th>
    <th>DSP</th>
    <th>MFA?</th>
  </tr>
  <% @all_registrations.each do |reg| %>
    <tr>
      <td><%= reg.name %></td>
      <td><%= reg.inst_id %></td>
      <td><%= reg.jira_ticket %></td>
      <td><%= reg.contact_info %></td>
      <td>
	<%= reg.auth_rep_name %>
	<br/>
	<%= reg.auth_rep_email %>
	(<%= reg.auth_rep_date %>)
      </td>
      <td>
	<%= reg.dsp_name %>
	<br/>
	<%= reg.dsp_email %>
	(<%= reg.dsp_date %>)
      </td>
      <td><%= reg.mfa_addendum %></td>
    </tr>
  <% end %>
</table>
