<nav class="navbar navbar-default">
  <div class="container-fluid">
  <% unless logged_in? %>
      <p class="navbar-text"><% I18n.t("global.not_logged_in") %></p>
  <% else %>
    <p class="navbar-text"><%= I18n.t("global.logged_in_as", user: current_user.id) %></p>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% unless Rails.env.production? %>
        <li><%= link_to I18n.t("global.log_out"), logout_path %></li>
        <% end %>
        <% nav_menu.tap do |nav| %>
          <% if nav.any? %>
            <li><%= link_to I18n.t("global.home"), controller.default_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                 role="button" aria-haspopup="true" aria-expanded="false">
                 <%= I18n.t("global.go") %> <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <% nav.each do |item| %>
                  <li><%= link_to I18n.t("global.menus.#{item[:item]}"), item[:path] %></li>
                <% end %>
                <!--<li role="separator" class="divider"></li>-->
              </ul>
            </li>
           <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
  </div>
</nav>
