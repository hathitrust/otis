<div id="maincontent" class="row">
  <h1>Users</h1>

  <%= render 'shared/flash_message' %>
  <%= form_tag(ht_users_path, method: :get) do %>
    E-mail <%= text_field_tag :email, params[:email] %>
    <%= submit_tag 'Search', name: nil %>
  <% end %>

  <table class="table table-striped">
    <th>E-mail</th>
    <th>Name</th>
    <th>ID</th>
    <th>Role</th>
    <th>Institution</th>
    <th>Expires</th>
    <th>IP Restriction</th>
    <th>MFA?</th>

    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.email, ht_user_path(u) %></td>
        <td><%= u.displayname %></td>
        <td><%= u.userid %></td>
        <td><%= u.role %></td>
        <td><%= u.institution %></td>
        <td><%= u.expires(short: true) %></td>
        <td><%= u.iprestrict %></td>
        <td>
          <%= raw u[:mfa] ? '<i class="glyphicon glyphicon-ok"></i>' : '' %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
  
